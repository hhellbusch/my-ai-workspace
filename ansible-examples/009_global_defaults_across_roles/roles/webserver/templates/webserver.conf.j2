# Webserver Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

# Application: {{ app_name }} v{{ app_version }}
# Environment: {{ environment }}

# Server settings
ServerName {{ app_domain }}
Listen {{ webserver_port }}

# Resource limits (from global vars)
MaxConnections {{ max_connections }}
MemoryLimit {{ memory_limit }}

# Logging (from common vars)
LogLevel {{ log_level }}
LogFile {{ log_dir }}/webserver.log

# SSL Configuration
{% if enable_ssl %}
SSLEngine on
SSLCertificateFile {{ config_dir }}/ssl.crt
SSLCertificateKeyFile {{ config_dir }}/ssl.key
{% else %}
SSLEngine off
{% endif %}

# Debug mode
{% if debug_mode %}
DebugMode on
VerboseLogging on
{% else %}
DebugMode off
{% endif %}

# Admin contact
ServerAdmin {{ admin_email }}

# Document root
DocumentRoot {{ base_install_dir }}/webserver/html

